<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bar"
            android:layout_width="fill_parent"
            android:layout_height="49dp"
            android:scaleType="fitXY"
            android:src="@drawable/navigationbar" />

        <ImageButton
            android:id="@+id/bBack"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/back"
            android:onClick="back" />

        <ImageView
            android:id="@+id/ivStore"
            android:layout_width="160dp"
            android:layout_height="53dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bar"
            android:singleLine="true"
            android:textColor="#F2F2F2"
            android:textSize="25sp"
            android:visibility="invisible" >
        </EditText>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar"
            android:orientation="vertical"
            android:paddingLeft="@dimen/tiles_horizontal_margin"
            android:paddingRight="@dimen/tiles_horizontal_margin" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tiles_vertical_margin"
                android:weightSum="100" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50" >

                    <ImageView
                        android:id="@+id/t1"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="toCoupon"
                        android:scaleType="fitXY"
                        android:src="@drawable/tile10" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="50" >

                    <ImageView
                        android:id="@+id/t2"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="toCoupon"
                        android:scaleType="fitXY"
                        android:src="@drawable/tile10" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tiles_vertical_margin"
                android:weightSum="100" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50" >

                    <ImageView
                        android:id="@+id/t3"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="toCoupon"
                        android:scaleType="fitXY"
                        android:src="@drawable/tile10" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="50" >

                    <ImageView
                        android:id="@+id/t4"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="toCoupon"
                        android:scaleType="fitXY"
                        android:src="@drawable/tile10" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tiles_vertical_margin"
                android:weightSum="100" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50" >

                    <ImageView
                        android:id="@+id/t5"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="toCoupon"
                        android:scaleType="fitXY"
                        android:src="@drawable/tile10" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="50" >

                    <ImageView
                        android:id="@+id/t6"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="toCoupon"
                        android:scaleType="fitXY"
                        android:src="@drawable/tile10" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tiles_vertical_margin"
                android:weightSum="100" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50" >

                    <ImageView
                        android:id="@+id/t7"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="toCoupon"
                        android:scaleType="fitXY"
                        android:src="@drawable/tile10" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="50" >

                    <ImageView
                        android:id="@+id/t8"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="toCoupon"
                        android:scaleType="fitXY"
                        android:src="@drawable/tile10" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tiles_vertical_margin"
                android:weightSum="100" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50" >

                    <ImageView
                        android:id="@+id/t9"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="toCoupon"
                        android:scaleType="fitXY"
                        android:src="@drawable/tile10" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="50" >

                    <ImageView
                        android:id="@+id/t10"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="toCoupon"
                        android:scaleType="fitXY"
                        android:src="@drawable/tile10" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tiles_vertical_margin" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50" >

                    <ImageView
                        android:id="@+id/t11"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="toCoupon"
                        android:scaleType="fitXY"
                        android:src="@drawable/tile10" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="50" >

                    <ImageView
                        android:id="@+id/t12"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="toCoupon"
                        android:scaleType="fitXY"
                        android:src="@drawable/tile10" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>